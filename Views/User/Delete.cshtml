@model UserManager.Models.User

@{
    ViewData["Title"] = $"Xóa người dùng - {Model.FullName}";
}

<h1 class="text-danger text-center mb-4">
    <i class="bi bi-exclamation-triangle-fill"></i>
    Xóa người dùng: <span class="text-dark">@Model.FullName</span>
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-danger">
                    Bạn có chắc chắn muốn xóa người dùng này không?
                </h5>
                <p class="text-muted mb-4">
                    <i class="bi bi-info-circle"></i> Hành động này không thể hoàn tác.
                </p>

                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.UserCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UserCode)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.FullName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.BirthDate)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.BirthDate)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Phone)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Address)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                </dl>

                <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Xóa người dùng
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
