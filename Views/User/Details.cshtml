@model UserManager.Models.User

@{
    ViewData["Title"] = $"Chi tiết người dùng - {Model.FullName}";
}

<h1 class="text-primary text-center mb-4">
    <i class="bi bi-person-vcard-fill"></i>
    Chi tiết người dùng: <span class="text-dark">@Model.FullName</span>
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.UserCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UserCode)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.FullName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.BirthDate)</dt>
                    <dd class="col-sm-8">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Phone)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Address)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-white">
                        <i class="bi bi-pencil-fill"></i> Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
